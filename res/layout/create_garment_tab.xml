    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    
    <RelativeLayout
        android:id="@+id/TypeWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <EditText
            android:id="@+id/EditTextTypeTag"
            android:hint="tag garment with types" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </EditText>
         <ootd.com.HorizontalListView
            android:id="@+id/ListViewTypeTag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EditTextTypeTag"            
            >
        </ootd.com.HorizontalListView> 
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/ColorWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <EditText
            android:id="@+id/EditTextColorTag"
            android:hint="tag garments with colors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </EditText>
        <ootd.com.HorizontalListView
            android:id="@+id/ListViewColorTag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EditTextColorTag"
            >
        </ootd.com.HorizontalListView>
    </RelativeLayout> 
    
